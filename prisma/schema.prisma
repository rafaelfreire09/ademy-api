// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  UserID                       Int            @id @default(autoincrement())
  Name                         String
  Email                        String         @unique
  Password                     String
  CreatedAt                    DateTime       @default(now())
  UpdatedAt                    DateTime       @updatedAt

  @@map("Users")
}